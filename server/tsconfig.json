{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es5",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"skipDefaultLibCheck": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"lib": ["es5", "es6"]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
