{
	"compilerOptions": {
		"target": "es5",
		"sourceMap": true,
		"outDir": "./dist",
		"lib": ["dom", "dom.iterable", "esnext", "es6"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": false,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"removeComments": true,
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"src/*": ["./src/*"]
		}
	},
	"include": ["src", "./src/types/global.d.ts"],
	"exclude": ["node_modules"]
}
