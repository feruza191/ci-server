{
	"compilerOptions": {
		"target": "es5",
		"sourceMap": true,
		"outDir": "./dist",
		"lib": ["dom", "dom.iterable", "esnext", "es6"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": false,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"removeComments": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"client/*": ["./client/*"]
		}
	},
	"include": ["client", "server", "agent"],
	"exclude": ["node_modules", "client/**/*.spec.ts", "server/src/**/*.spec.ts", "agent/*.spec.ts"]
}
